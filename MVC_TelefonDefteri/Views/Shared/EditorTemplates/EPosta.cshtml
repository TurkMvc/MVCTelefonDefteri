@model MVC_TelefonDefteri.Entities.EPosta

@{
    Layout = null;
    string KulID;
    int EpostaId = ViewBag.EPostaID;
    string EPostaDivId = "Eposta" + EpostaId;
    if (Request.QueryString["K"]==null)
    {
        KulID = "1";
    }else
	{
        KulID = Request.QueryString["K"];
	}
}

<div class="col-md-12" id="@EPostaDivId">
    <div class="input-group">
        @Html.LabelFor(Model => Model.Adres, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(Model => Model.Adres, new { htmlAttributes = new { @class = "form-control" } })
            <span class="input-group-btn">
                <a class="btn btn-danger" onclick="EpostaSil(@EpostaId)">Sil</a>

            </span>
            @Html.ValidationMessageFor(Model => Model.Adres, "", new { @class = "text-danger" })
        </div>

    </div>
</div>
